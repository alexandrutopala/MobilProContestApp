<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:cardElevation="@dimen/elevation_standard"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="70dp"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/month_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mar."
                        android:textColor="@color/colorTextTitle"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:clickable="false"
                        android:focusable="false"/>

                    <TextView
                        android:id="@+id/day_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:textColor="@color/colorTextTitle"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:clickable="false"
                        android:focusable="false"/>

                </LinearLayout>


                <View
                    android:background="@color/grey"
                    android:layout_width="1.5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/title_post_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Titlu"
                        android:textColor="@color/colorTextTitle"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:textSize="18sp"
                        android:clickable="false"
                        android:focusable="false"/>

                    <TextView
                        android:id="@+id/descriere_post_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ddddddddddddddddddddddddddddddddddddddddddddd"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:textSize="14sp"
                        android:layout_marginTop="7dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:clickable="false"
                        android:focusable="false"/>

                </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>