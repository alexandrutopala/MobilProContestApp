<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_material_light">


        <TextView
            android:id="@+id/when_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/notification_imageview"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:text="Sample"
            android:textSize="12sp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/what_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/when_textview"
            android:layout_toStartOf="@id/notification_imageview"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:textSize="16sp"
            android:text="Sample"
            android:textColor="@color/colorTextTitle"
            android:maxLines="1" />


    <ImageView
        android:id="@+id/notification_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:clickable="false"
        android:focusable="false" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_below="@id/what_textview"/>


</RelativeLayout>